<section class="card">
  <header class="card__header">
    <div>
      <p class="eyebrow">Status</p>
      <h2>Payment {{status}}</h2>
    </div>
    <div class="status-chip {{status}}">{{status}}</div>
  </header>

  <div class="result-grid">
    <div class="result-item">
      <p class="label">Order ID</p>
      <p class="value">{{orderId}}</p>
    </div>
    <div class="result-item">
      <p class="label">Transaction ID</p>
      <p class="value">{{TXNID}}</p>
    </div>
    <div class="result-item">
      <p class="label">Email</p>
      <p class="value">{{email}}</p>
    </div>
    <div class="result-item">
      <p class="label">Phone</p>
      <p class="value">{{phone}}</p>
    </div>
    <div class="result-item">
      <p class="label">Amount</p>
      <p class="value">{{amount}}</p>
    </div>
  </div>

  <form action="{{action}}" method="POST" class="form-grid form-grid--compact">
    <input type="hidden" name="ORDER_ID" value="{{orderId}}" />
    <input type="hidden" name="TXNID" value="{{TXNID}}" />
    <button type="submit" class="button">Done</button>
  </form>
</section>
